{
  "name": "generate-book-bible",
  "version": "1.0.0",
  "description": "Google Cloud Function para generar book bible personalizado",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=generate-book-bible",
    "deploy": "gcloud functions deploy generate-book-bible --runtime=nodejs20 --trigger=http --allow-unauthenticated --entry-point=generate-book-bible"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@supabase/supabase-js": "^2.39.0"
  },
  "engines": {
    "node": "20"
  }
}

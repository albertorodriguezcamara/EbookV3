{
  "name": "generate-book-cover",
  "version": "1.0.0",
  "description": "Google Cloud Function para generar portadas de libros usando IA",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=generateBookCover",
    "deploy": "gcloud functions deploy generate-book-cover --runtime=nodejs20 --trigger-http --allow-unauthenticated --entry-point=generateBookCover --memory=4GiB --timeout=540s --region=europe-west1"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@supabase/supabase-js": "^2.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
